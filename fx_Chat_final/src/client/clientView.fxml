<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0"
	prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.Controller">
	<children>
		<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
			<children>
				<Text strokeType="OUTSIDE" strokeWidth="0.0"
					text="FX Chat Client">
					<font>
						<Font name="Comic Sans MS" size="36.0" />
					</font>
				</Text>
			</children>
		</HBox>
		<HBox alignment="CENTER" prefHeight="40.0" prefWidth="400.0">
			<children>
				<Line endX="150.0" startX="-200.0" />
			</children>
		</HBox>
		<HBox alignment="CENTER" prefHeight="59.0" prefWidth="400.0">
			<children>
				<Text fx:id="msg" fill="RED" strokeType="OUTSIDE"
					strokeWidth="0.0" text="Text" />
			</children>
		</HBox>
		<HBox alignment="CENTER" prefHeight="70.0" prefWidth="200.0">
			<children>
				<Text strokeType="OUTSIDE" strokeWidth="0.0" text="IP"
					textAlignment="CENTER" wrappingWidth="50.0" />
				<TextField fx:id="ipField" />
			</children>
		</HBox>
		<HBox alignment="CENTER" prefHeight="70.0" prefWidth="200.0">
			<children>
				<Text strokeType="OUTSIDE" strokeWidth="0.0" text="Port"
					textAlignment="CENTER" wrappingWidth="50.0" />
				<TextField fx:id="portField" />
			</children>
		</HBox>
		<HBox alignment="CENTER" prefHeight="70.0" prefWidth="200.0">
			<children>
				<Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name"
					textAlignment="CENTER" wrappingWidth="50.0" />
				<TextField fx:id="nameField" />
			</children>
		</HBox>
		<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
			<children>
				<Button fx:id="startBtn" mnemonicParsing="false" text="시작">
					<HBox.margin>
						<Insets left="10.0" right="10.0" />
					</HBox.margin>
				</Button>
				<Button fx:id="quitBtn" mnemonicParsing="false" text="종료">
					<HBox.margin>
						<Insets left="10.0" right="10.0" />
					</HBox.margin>
				</Button>
			</children>
		</HBox>
	</children>
</VBox>
